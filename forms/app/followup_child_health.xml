      </itext>
      <instance>
        <followup_child_health id="followup_child_health" prefix="J1!followup_child_health!" delimiter="#" version="2022-07-06 21:48:24">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <delivery_uuid/>
            <contact>
              <_id/>
              <name/>
              <short_name/>
              <patient_id/>
              <date_of_birth>0</date_of_birth>
              <sex/>
              <parent>
                <_id/>
                <parent>
                  <contact>
                    <chw_name/>
                    <phone/>
                  </contact>
                </parent>
              </parent>
            </contact>
          </inputs>
          <patient_age_in_years tag="hidden"/>
          <patient_uuid tag="hidden"/>
          <patient_id tag="hidden"/>
          <patient_name tag="hidden"/>
          <t_danger_signs_referral_follow_up_date tag="hidden"/>
          <t_danger_signs_referral_follow_up tag="hidden"/>
          <danger_signs>
            <visit_confirm/>
            <danger_sign_present/>
            <danger_signs_question_note tag="hidden"/>
            <convulsion/>
            <difficulty_feeding/>
            <yellow_skin/>
            <fever/>
            <r_danger_sign_present tag="hidden"/>
            <congratulate_no_ds_note tag="hidden"/>
            <refer_patient_note_1 tag="hidden"/>
            <refer_patient_note_2 tag="hidden"/>
          </danger_signs>
          <data tag="hidden">
            <__visited_hf/>
            <__still_experiencing_danger_sign/>
            <__convulsions/>
            <__difficulty_feeding_or_drinking/>
            <__yellow_skin_color/>
            <__fever/>
            <__has_danger_sign/>
            <meta tag="hidden">
              <__patient_uuid/>
              <__patient_id/>
              <__household_uuid/>
              <__source/>
              <__source_id/>
              <__delivery_uuid/>
            </meta>
          </data>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </followup_child_health>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/followup_child_health/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/followup_child_health/inputs/source" type="string"/>
      <bind nodeset="/followup_child_health/inputs/source_id" type="string"/>
      <bind nodeset="/followup_child_health/inputs/delivery_uuid" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/followup_child_health/inputs/contact/name" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/short_name" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/sex" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/parent/parent/contact/chw_name" type="string"/>
      <bind nodeset="/followup_child_health/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind nodeset="/followup_child_health/patient_age_in_years" type="string" calculate="floor( difference-in-months( ../inputs/contact/date_of_birth, today() ) div 12 )"/>
      <bind nodeset="/followup_child_health/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/followup_child_health/patient_id" type="string" calculate="../inputs/contact/patient_id"/>
      <bind nodeset="/followup_child_health/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/followup_child_health/t_danger_signs_referral_follow_up_date" type="string" calculate="date-time(floor(decimal-date-time(today())) + 3)"/>
      <bind nodeset="/followup_child_health/t_danger_signs_referral_follow_up" type="string" calculate="../danger_signs/r_danger_sign_present"/>
      <bind nodeset="/followup_child_health/danger_signs/visit_confirm" type="select1" required="true()"/>
      <bind nodeset="/followup_child_health/danger_signs/danger_sign_present" type="select1" required="true()"/>
      <bind nodeset="/followup_child_health/danger_signs/danger_signs_question_note" readonly="true()" type="string" relevant="../danger_sign_present = 'yes' or ../danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/convulsion" type="select1" required="true()" relevant="../danger_sign_present = 'yes' or ../danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/difficulty_feeding" type="select1" required="true()" relevant="../danger_sign_present = 'yes' or ../danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/yellow_skin" type="select1" required="true()" relevant="../danger_sign_present = 'yes' or ../danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/fever" type="select1" required="true()" relevant="../danger_sign_present = 'yes' or ../danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/r_danger_sign_present" type="string" calculate="if(selected(../convulsion, 'yes') or
selected(../difficulty_feeding, 'yes') or
selected(../yellow_skin, 'yes') or
selected(../fever, 'yes'), 'yes', 
if(selected(../convulsion, 'no') and
selected(../difficulty_feeding, 'no') and
selected(../yellow_skin, 'no') and
selected(../fever, 'no'), 'no', ''))"/>
      <bind nodeset="/followup_child_health/danger_signs/congratulate_no_ds_note" readonly="true()" type="string" relevant="../danger_sign_present = 'no' and ../r_danger_sign_present = 'no'"/>
      <bind nodeset="/followup_child_health/danger_signs/refer_patient_note_1" readonly="true()" type="string" relevant="../danger_sign_present = 'yes' or ../r_danger_sign_present = 'yes'"/>
      <bind nodeset="/followup_child_health/danger_signs/refer_patient_note_2" readonly="true()" type="string" relevant="../danger_sign_present = 'yes' or ../r_danger_sign_present = 'yes'"/>
      <bind nodeset="/followup_child_health/data/__visited_hf" type="string" calculate=" /followup_child_health/danger_signs/visit_confirm "/>
      <bind nodeset="/followup_child_health/data/__still_experiencing_danger_sign" type="string" calculate=" /followup_child_health/danger_signs/danger_sign_present "/>
      <bind nodeset="/followup_child_health/data/__convulsions" type="string" calculate=" /followup_child_health/danger_signs/convulsion "/>
      <bind nodeset="/followup_child_health/data/__difficulty_feeding_or_drinking" type="string" calculate=" /followup_child_health/danger_signs/difficulty_feeding "/>
      <bind nodeset="/followup_child_health/data/__yellow_skin_color" type="string" calculate=" /followup_child_health/danger_signs/yellow_skin "/>
      <bind nodeset="/followup_child_health/data/__fever" type="string" calculate=" /followup_child_health/danger_signs/fever "/>
      <bind nodeset="/followup_child_health/data/__has_danger_sign" type="string" calculate=" /followup_child_health/danger_signs/r_danger_sign_present "/>
      <bind nodeset="/followup_child_health/data/meta/__patient_uuid" type="string" calculate="../../../inputs/contact/_id"/>
      <bind nodeset="/followup_child_health/data/meta/__patient_id" type="string" calculate="../../../inputs/contact/patient_id"/>
      <bind nodeset="/followup_child_health/data/meta/__household_uuid" type="string" calculate="../../../inputs/contact/parent/_id"/>
      <bind nodeset="/followup_child_health/data/meta/__source" type="string" calculate="../../../inputs/source"/>
      <bind nodeset="/followup_child_health/data/meta/__source_id" type="string" calculate="../../../inputs/source_id"/>
      <bind nodeset="/followup_child_health/data/meta/__delivery_uuid" type="string" calculate="../../inputs/delivery_uuid"/>
      <bind nodeset="/followup_child_health/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
