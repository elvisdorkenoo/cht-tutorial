      <bind nodeset="/child_health_assessment/patient_short_name" type="string" calculate="../inputs/contact/short_name"/>
      <bind nodeset="/child_health_assessment/patient_display_name" type="string" calculate="if(../patient_short_name = '', ../patient_name, concat(../patient_name, ' (', ../patient_short_name, ')'))"/>
      <bind nodeset="/child_health_assessment/patient_details/patient_height" type="int" required="true()"/>
      <bind nodeset="/child_health_assessment/patient_details/patient_weight" type="int" required="true()"/>
      <bind nodeset="/child_health_assessment/patient_details/immunisation_package_yes_no" type="select1" required="true()"/>
      <bind nodeset="/child_health_assessment/last_immunisation_details" relevant="selected(../patient_details/immunisation_package_yes_no, 'yes')"/>
