      <bind nodeset="/child_health_assessment/group_review/submit" readonly="true()" type="string"/>
      <bind nodeset="/child_health_assessment/group_review/r_referral" relevant="selected(../../patient_state/patient_unwell, 'yes')"/>
      <bind nodeset="/child_health_assessment/group_review/r_referral/r_referral_header" readonly="true()" type="string"/>
      <bind nodeset="/child_health_assessment/group_review/r_referral/r_referral_details" readonly="true()" type="string"/>
      <bind nodeset="/child_health_assessment/group_review/r_followup" relevant="selected(../../patient_state/patient_unwell, 'yes')"/>
