      <bind nodeset="/child_health_assessment/group_review/data/__source_id" type="string" calculate="../../../inputs/source_id" required="false()"/>
      <bind nodeset="/child_health_assessment/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
