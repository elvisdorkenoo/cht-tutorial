      <bind nodeset="/child_health_assessment/patient_age_in_years" type="string" calculate="floor( difference-in-months(  /child_health_assessment/inputs/contact/date_of_birth , today() ) div 12 )"/>
      <bind nodeset="/child_health_assessment/patient_age_in_months" type="string" calculate="difference-in-months(  /child_health_assessment/inputs/contact/date_of_birth , today() )"/>
      <bind nodeset="/child_health_assessment/patient_age_in_days" type="string" calculate="floor(decimal-date-time(today()) - decimal-date-time( /child_health_assessment/inputs/contact/date_of_birth ) )"/>
      <bind nodeset="/child_health_assessment/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
