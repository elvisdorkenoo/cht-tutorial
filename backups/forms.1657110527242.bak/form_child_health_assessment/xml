      <bind nodeset="/child_health_assessment/group_review/r_followup/r_followup_detils" readonly="true()" type="string"/>
      <bind nodeset="/child_health_assessment/group_review/data" required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/patient_details_title" readonly="true()" type="string" required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/__patient_id" type="string" calculate="../../inputs/contact/patient_id" required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/__patient_height" type="string" calculate=" /child_health_assessment/patient_details/patient_height " required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/__patient_weight" type="string" calculate=" /child_health_assessment/patient_details/patient_weight " required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/BMI" type="string" calculate=" /child_health_assessment/patient_details/patient_height / /child_health_assessment/patient_details/patient_weight " required="false()"/>
      <bind nodeset="/child_health_assessment/group_review/data/__patient_uuid" type="string" calculate="../../../inputs/contact/_id" required="false()"/>
